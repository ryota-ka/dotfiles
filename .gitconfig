[alias]
  br = branch
  co = checkout
  cm = commit -m
  cma = commit --amend
  dfc = diff --cached
  lg = log --oneline --graph --decorate
  st = status
[color]
  ui = auto
[core]
  editor = nvim
  excludesfile = ~/.gitignore_global
  pager = diff-highlight | less -R
[diff]
  compactionHeuristic = true
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[merge]
  conflictStyle = diff3
  ff = false
[pull]
  ff = only
[rebase]
  autosquash = true
  autostash = true
[user]
  name = Ryota Kameoka
  email = kameoka.ryota@gmail.com
  signingkey = B3A90912D6C9D2AE
[filter "lfs"]
  required = true
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
[gpg]
  program = gpg
[rerere]
  enabled = true
[interactive]
  diffFilter = diff-highlight
[push]
  default = current
