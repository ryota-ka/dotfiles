[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[user]
  name = Ryota Kameoka
  email = kameoka.ryota@gmail.com
[color]
  ui = auto
[alias]
  lg = log --oneline --graph --decorate
  co = checkout
  cm = commit -m
  cma = commit --amend
  st = status
  br = branch
  ft = fetch
  bri = browse -- issues
  brp = browse -- pulls
  pr = "!sh -c 'hub pull-request -i $1 -b $2' -"
  dfc = diff --cached
[merge]
  ff = false
[core]
  editor = /usr/local/bin/vim
[credential]
  helper = osxkeychain
