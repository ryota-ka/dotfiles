fzf-git-add() {
  local files="$(git status --porcelain | awk '{ print $2 }' | fzf -m --preview 'git diff --color=always -- $(git rev-parse --show-cdup){} | diff-highlight')"

  if [ -n "$files" ]; then
    BUFFER="git add $(echo $files | sed -e "s|^|$(git rev-parse --show-cdup)|" | tr '\n' ' ')"
    CURSOR=#BUFFER
  fi
}
